#:kivy 2.3.0
FloatLayout:
    # Background Image
    Image:
        source: "assets/background.jpg"
        allow_stretch: True
        keep_ratio: False
        size_hint: (1, 1)

    # Overlay Content
    MDFloatLayout:
        Image:
            source:"assets/location.png"
            size_hint :None,None
            width:70
            height:60
            pos_hint :{"center_x": .3, "center_y": .95} 
        MDLabel:
            id: location
            pos_hint: {"center_x": .5, "center_y": .95}
            halign: "center"
            font_style: "H6"
            theme_text_color: "Custom"
            text_color: 38/255, 38/255,38/255, 1
        Image:
            id: weather_image
            size_hint: None, None
            width: 330
            height: 200
            pos_hint: {"center_x": .2, "center_y": .81}
        MDLabel:
            id: temperature
            markup: True
            pos_hint: {"center_x": .73, "center_y": .84}
            halign: "center"
            font_style: "H1"
            theme_text_color: "Custom"
            text_color:204/255,204/255,204/255, 1
        MDLabel:
            id: weather
            text: ""
            pos_hint: {"center_x": .68, "center_y": .74}
            halign: "center"
            font_style: "H6"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
        MDFloatLayout:
            pos_hint: {"center_x": .2, "center_y": .5}
            size_hint: .19, .08
            Image:
                source: "assets/humidity.png"
                pos_hint: {"center_x": .1, "center_y": .5}
            MDLabel:
                id: humidity
                text: ""
                pos_hint: {"center_x": 1, "center_y": .7}
                font_size: "18sp"
                font_name: "LPoppins"
                theme_text_color: "Custom"
                text_color: 102/22,26/255,0, 1
            MDLabel:
                text: "Humidity"
                pos_hint: {"center_x": 1, "center_y": .25}
                font_size: "14sp"
                font_name: "LPoppins"
                theme_text_color: "Custom"
                text_color: 0,0,0, 1
        MDFloatLayout:
            pos_hint: {"center_x": .8, "center_y": .5}
            size_hint: .14, .08
            Image:
                source: "assets/wind.png"
                pos_hint: {"center_x": .08, "center_y": .42}
            MDLabel:
                id: wind_speed
                pos_hint: {"center_x": 1.2, "center_y": .6}
                font_size: "14sp"
                font_name: "LPoppins"
                theme_text_color: "Custom"
                text_color: 68/255, 102/2556,0, 1
            MDLabel:
                text: "Wind"
                pos_hint: {"center_x": 1.25, "center_y": .2}
                font_size: "16sp"
                font_name: "LPoppins"
                theme_text_color: "Custom"
                text_color: 0, 0,0, 1

        MDFloatLayout:
            pos_hint: {"center_x": .2, "center_y": .3}
            size_hint: .20, .08
            Image:
                source: "assets/sunrise.png"
                pos_hint: {"center_x": .1, "center_y": .3}
            MDLabel:
                id:sunrise
                pos_hint: {"center_x": 1, "center_y": .3}
                font_size: "15sp"
                font_name: "LPoppins"
                theme_text_color: "Custom"
                text_color:0,0,0, 1
            

        MDFloatLayout:
            pos_hint: {"center_x": .78, "center_y": .3}
            size_hint: .20, .08
            Image:
                source: "assets/sunset.png"
                pos_hint: {"center_x": .1, "center_y": .4}
            MDLabel:
                id: sunset
                pos_hint: {"center_x": 1, "center_y": .3}
                font_size: "15sp"
                font_name: "LPoppins"
                theme_text_color: "Custom"
                text_color: 0,0,0, 1


        MDFloatLayout:
            MDFloatLayout:
                pos_hint: {"center_x": .5, "center_y": .05}
                size_hint: None, None
                width:660
                height:105
                canvas:
                    Color:
                        rgba: 143/255, 145/255,146/255, .2
                    RoundedRectangle:
                        size:self.size
                        pos:self.pos
                        radius: [50]
            TextInput:
                id: city_name
                hint_text: "Enter City Name"
                size_hint:  None, None
                width:500
                height:90
                pos_hint: {"center_x": .41, "center_y": .04}
                font_name:"Poppins"
                font_size: "18sp"
                multiline: False
                hint_text_color: 0, 0, 0, .9
                foreground_color: 0,0,0,1
                background_color: 0,0, 0,0
                padding: 15
                cursor_color: 0, 0, 0, 1
                cursor_width: "2sp"
            MDRoundFlatButton:
                text: "Search"
                size_hint:(.26,.068)
                pos_hint: {"center_x": .835, "center_y": .05}
                background_color:"00FF00"
                on_release: app.search_weather()